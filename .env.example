NODE_ENV=development

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=integration_hub
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/integration_hub

# Redis/BullMQ
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Shopify
SHOPIFY_SHOP=your-shop.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_xxx
SHOPIFY_API_VERSION=2024-10

# Galaxus SFTP
GALAXUS_SFTP_HOST=sftp.galaxus.ch
GALAXUS_SFTP_PORT=22
GALAXUS_SFTP_USER=ftp-user
GALAXUS_SFTP_PASS=super-secret
GALAXUS_SFTP_KEY_PATH=
GALAXUS_SFTP_REMOTE_DIR=/uploads

# Scheduling
SHOPIFY_SNAPSHOT_CRON=0 2 * * *
SUPPLIERS_SYNC_CRON=0 */2 * * *
GALAXUS_EXPORT_CRON=0 */2 * * *

# Exports
EXPORTS_PATH=/exports
