NODE_ENV=development

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=integration_hub
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/integration_hub

# Redis/BullMQ
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Shopify
SHOPIFY_SHOP=your-shop.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_xxx
SHOPIFY_API_VERSION=2024-10

# Golden Sneakers
GOLDENSNEAKERS_BASE_URL=https://www.goldensneakers.net/api/assortment/
GOLDENSNEAKERS_TOKEN=
GOLDENSNEAKERS_SEARCH_QUERY=
GOLDENSNEAKERS_MARKUP=10
GOLDENSNEAKERS_VAT=8.1
GOLDENSNEAKERS_ROUNDING=whole
GOLDENSNEAKERS_ONLY_EAN=true

# Supplier1
