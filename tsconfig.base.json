{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@resell-lausanne/shared": ["packages/shared/dist"],
      "@resell-lausanne/db": ["packages/db/dist"]
    },
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["DOM", "ES2021"],
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": ["node"]
  }
}

